{
  "compilerOptions": {
    "rootDir": "src",
    "types": ["node", "express"],
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "strict": true
  },
  "include": ["src/**/*"],

  "ts-node": {
    "files": true
  }
}
