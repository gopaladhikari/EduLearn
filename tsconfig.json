{
  "compilerOptions": {
    "rootDir": "src",
    "types": ["node", "express"],
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "noImplicitOverride": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],

  "ts-node": {
    "files": true
  }
}
